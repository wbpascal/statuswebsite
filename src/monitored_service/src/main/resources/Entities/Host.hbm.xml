<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="Entities.Host" table="HOSTS">
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>

        <set name="services" table="SERVICES">
            <key column="host_id" not-null="true"/>
            <one-to-many class="Entities.Service"/>
        </set>

        <property name="hostName" column="host_name" type="string"/>
        <property name="description" column="description" type="string"/>
        <property name="icon" column="icon" type="string"/>
    </class>
</hibernate-mapping>