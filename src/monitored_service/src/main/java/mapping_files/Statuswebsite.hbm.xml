<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="Entities.Host" table="HOSTS">
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>

        <property name="hostName" column="host_name" type="String"/>
        <property name="description" column="description" type="String"/>
        <property name="icon" column="icon" type="String"/>
    </class>
    
    <class name="Entities.Service" table="SERVICES">
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>

        <property name="serviceName" column="service_name" type="String"/>
        <property name="type" column="type" type="String"/>
    </class>
</hibernate-mapping>